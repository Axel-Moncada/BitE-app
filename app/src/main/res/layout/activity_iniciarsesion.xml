<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="348dp"
        android:layout_height="235dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103"
        app:srcCompat="@drawable/logocolor" />

    <TextView
        android:id="@+id/tituloinicioSesion"
        android:layout_width="321dp"
        android:layout_height="37dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Iniciar sesion "
        android:textAlignment="center"
        android:textColor="@color/azul_oscuro"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309" />

    <TextView
        android:id="@+id/emailtitleinicioSesion"
        android:layout_width="328dp"
        android:layout_height="35dp"

        android:fontFamily="@font/montserrat"
        android:text="Email o usuario"
        android:textAlignment="center"
        android:textColor="@color/azul_oscuro"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloinicioSesion"
        app:layout_constraintVertical_bias="0.083" />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="301dp"
        android:layout_height="50dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email o usuario"
        android:paddingLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailtitleinicioSesion"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/contrasenatitleinicioSesion"
        android:layout_width="328dp"
        android:layout_height="35dp"

        android:fontFamily="@font/montserrat"
        android:text="Contraseña"
        android:textAlignment="center"
        android:textColor="@color/azul_oscuro"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloinicioSesion"
        app:layout_constraintVertical_bias="0.298" />

    <EditText
        android:id="@+id/inputPassword"

        android:layout_width="301dp"

        android:layout_height="50dp"
        android:background="@drawable/input_text"
        android:ems="10"

        android:hint="Ingresa tu contraseña"
        android:inputType="textPassword"
        android:paddingLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrasenatitleinicioSesion"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageGoogle"
        android:layout_width="266dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonInicioSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/google" />
    <Button
        android:id="@+id/buttonInicioSesion"
        android:layout_width="312dp"
        android:layout_height="72dp"

        android:backgroundTint="@color/azul_claro"
        android:fontFamily="@font/montserrat_bold"
        android:text="Iniciar sesion"
        android:textAlignment="center"

        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.832"
        app:rippleColor="@color/azul_claro" />

    <Button
        android:id="@+id/buttonCrearCuenta"
        android:layout_width="285dp"
        android:layout_height="53dp"

        android:backgroundTint="@color/azul_oscuro"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/montserrat"
        android:text="No tengo cuenta"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonInicioSesion"
        app:layout_constraintVertical_bias="0.363" />


</androidx.constraintlayout.widget.ConstraintLayout>