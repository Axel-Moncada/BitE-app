<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/azul_oscuro">


        <ImageView
            android:id="@+id/product_image_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/monitor1"
            android:contentDescription="@string/samsung_monitor_image" />

        <TextView
            android:id="@+id/product_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Monitor SAMSUNG 24\Pulgadas T350F FHD Plano Gris/Azul"
            android:textColor="@color/azul_oscuro"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/original_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="$ 499.000"
            android:textSize="16sp"
            android:textColor="@color/gris"/>

        <TextView
            android:id="@+id/discounted_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="$ 399.000"
            android:textColor="#0057A4"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buy_now_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            android:backgroundTint="@color/azul_claro"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="Comprar ahora"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>