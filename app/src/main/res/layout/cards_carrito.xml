<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/azul_oscuro"
        android:orientation="horizontal"
        android:padding="16dp">


        <ImageView
            android:id="@+id/product_image_view"
            android:layout_width="106dp"
            android:layout_height="104dp"
            android:contentDescription="@string/samsung_monitor_image"
            android:scaleType="fitCenter"
            android:src="@drawable/monitor1"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="246dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/product_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Monitor SAMSUNG 24\Pulgadas T350F FHD Plano Gris/Azul"
                android:textColor="@color/azul_oscuro"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/discounted_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="$ 399.000"
                android:textColor="#0057A4"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/montserrat"
                android:text="Cant. 1"
                android:textColor="@color/azul_oscuro"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>