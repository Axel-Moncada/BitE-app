<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="293dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108"
        app:srcCompat="@drawable/logocolor" />

    <TextView
        android:id="@+id/titulocrearcuenta"
        android:layout_width="321dp"
        android:layout_height="37dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Crear cuenta"
        android:textAlignment="center"
        android:textColor="@color/azul_oscuro"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.296" />


    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="301dp"
        android:layout_height="50dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:hint="Nombre completo"
        android:inputType="textEmailAddress"
        android:paddingLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Nombrecrearcuenta"
        app:layout_constraintVertical_bias="0.004" />

    <TextView
        android:id="@+id/Nombrecrearcuenta"
        android:layout_width="328dp"
        android:layout_height="35dp"

        android:fontFamily="@font/montserrat"
        android:text="Nombre"
        android:textAlignment="center"
        android:textColor="@color/azul_oscuro"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/imageLogo"
        app:layout_constraintVertical_bias="0.091" />


    <EditText
        android:id="@+id/inputemail"
        android:layout_width="301dp"
        android:layout_height="50dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Emailcrearcuenta"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Emailcrearcuenta"
        android:layout_width="328dp"
        android:layout_height="35dp"

        android:fontFamily="@font/montserrat"
        android:text="Correo electronico"
        android:textAlignment="center"
        android:textColor="@color/azul_oscuro"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail"
        app:layout_constraintVertical_bias="0.076" />


    <TextView
        android:id="@+id/contrasenacrearcuenta"
        android:layout_width="328dp"
        android:layout_height="35dp"

        android:fontFamily="@font/montserrat"
        android:text="Contraseña"
        android:textAlignment="center"
        android:textColor="@color/azul_oscuro"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputemail"
        app:layout_constraintVertical_bias="0.114" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="301dp"
        android:layout_height="50dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:hint="Ingresa tu contraseña"
        android:inputType="textPassword"
        android:paddingLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrasenacrearcuenta"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/imageGoogle"
        android:layout_width="266dp"
        android:layout_height="51dp"

        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonInicioSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/google" />

    <Button
        android:id="@+id/buttonInicioSesion"
        android:layout_width="358dp"
        android:layout_height="60dp"

        android:backgroundTint="@color/azul_claro"
        android:fontFamily="@font/montserrat_bold"
        android:text="Crear Cuenta"
        android:textAlignment="center"

        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904"
        app:rippleColor="@color/azul_claro" />

    <TextView
        android:id="@+id/yatengocrearcuenta"
        android:layout_width="322dp"
        android:layout_height="23dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/montserrat"
        android:text="Ya tengo cuenta"
        android:textAlignment="center"
        android:textColor="@color/azul_oscuro"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
        app:layout_constraintVertical_bias="0.774" />


</androidx.constraintlayout.widget.ConstraintLayout>